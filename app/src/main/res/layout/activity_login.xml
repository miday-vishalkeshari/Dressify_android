<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <!-- App Logo (Optional, can be your app's logo) -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dressify_icon"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title text (Optional) -->
<TextView
android:id="@+id/txt_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Welcome to Dressify"
android:textSize="24sp"
android:textColor="#000000"
    android:layout_marginTop="12dp"
android:layout_marginBottom="32dp"
android:layout_centerHorizontal="true"
app:layout_constraintTop_toBottomOf="@+id/img_logo"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Google Sign-In Button -->
<com.google.android.gms.common.SignInButton
android:id="@+id/btn_google_sign_in"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
app:layout_constraintTop_toBottomOf="@id/txt_title"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
android:layout_marginBottom="32dp" />

    <!-- Optional TextLink for other login methods -->
<TextView
android:id="@+id/txt_or_login"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Or Login with Email"
android:textSize="16sp"
android:textColor="#00796B"
app:layout_constraintTop_toBottomOf="@id/btn_google_sign_in"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
