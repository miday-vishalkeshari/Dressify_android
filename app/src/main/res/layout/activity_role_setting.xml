<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roleSettingScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="32dp"
    android:paddingBottom="50dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:divider="@android:color/transparent"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Heading -->
            <TextView
                android:id="@+id/roleSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Your Role"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Wishlist Icon -->
            <ImageView
                android:id="@+id/wishlistIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_liked"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circle_background"
                android:layout_centerVertical="true"
                android:contentDescription="Wishlist Icon"
                android:padding="2dp" />
        </RelativeLayout>

        <!-- Icon Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:elevation="6dp"
            android:radius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose an Avatar"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <GridView
                    android:id="@+id/iconGridView"
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:numColumns="5"
                    android:verticalSpacing="8dp"
                    android:horizontalSpacing="8dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Personal Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:radius="12dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name here"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp" />

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female" />

                    <RadioButton
                        android:id="@+id/radioOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other" />
                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/editTextAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="number"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin Colour"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:gravity="center_vertical">

                    <!-- Spinner for skin colour selection -->
                    <Spinner
                        android:id="@+id/skinColourSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_bg"
                        android:padding="4dp" />


                    <!-- Camera icon positioned at the right -->
                    <ImageView
                        android:id="@+id/cameraIconSkinColour"
                        android:src="@drawable/ic_camera"
                        android:layout_marginStart="16dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin Type"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:gravity="center_vertical">

                    <!-- Spinner for skin type selection -->
                    <Spinner
                        android:id="@+id/skinTypeSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/spinner_bg"
                        android:padding="4dp" />
                    <ImageView
                        android:id="@+id/bodyTypeInfoIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/body_type_info_icon"
                        android:contentDescription="View images"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp" />


                    <!-- Camera icon positioned at the right -->
                    <ImageView
                        android:id="@+id/cameraIconSkinType"
                        android:src="@drawable/ic_camera"
                        android:layout_marginStart="16dp"
                        android:layout_width="42dp"
                        android:visibility="gone"
                        android:layout_height="42dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height (in cm)"
                    android:inputType="number"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/edit_text_bg" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:radius="12dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save User Settings"
                android:background="@drawable/all_rounded_corners"
                android:textColor="@color/white"
                android:padding="14dp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:radius="12dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/deleteCurrentUserButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Current User Profile"
                android:background="@drawable/all_rounded_corners"
                android:textColor="@color/white"
                android:padding="14dp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:radius="12dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:background="@drawable/all_rounded_corners"
                android:textColor="@color/white"
                android:padding="14dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
